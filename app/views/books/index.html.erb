<div class="books_index">
<h1 class= "heading">Books</h1>

<table>
  <tr>
    <th style="width: 150px;">Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></tdpan>
    <td><%= link_to 'Show', book_path(book.id) %></td>
    <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
    <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" =>"confirm: 'Are you sure?" %></td>
  </tr>
  <% end %>
</table>

<h3 class="new_book">New book</h3>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <%= form_with model: Book.new do |f| %>
   <div class="books_title"> 
      <h7 class="new_book_title">Title</h7>
      <p><%= f.text_field :title %></p>
    </div>
    <div class="books_body">
      <h7>Body</h7>
      <p><%= f.text_area :body %></p>
    </div>	
    <%= f.submit 'Create Book' %>
  <% end %>
</div>