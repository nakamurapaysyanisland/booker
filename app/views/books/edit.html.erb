<div class="container">
  <h1>Editing Book</h1>

  <%= form_with model: @book do |f| %>

    <h7>Title</h7>
    <p><%= f.text_field :title %></p>

    <h7>Body</h7>
    <p><%= f.text_area :body %></p>

    <%= f.submit 'Update Book' %>

  <% end %>

   
  <%= link_to "Show", book_path(@book.id) %> |
  <%= link_to "Back", books_path %>
</div>